<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Base.V23.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="ColorStripe">
        <item name="android:background">#C6FF03</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PreferenceSectionHeader">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="HorizontalBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PreferenceCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
</resources>
