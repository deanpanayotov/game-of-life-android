<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Base.V23.Theme.AppCompat.Light">
        <item name="android:overScrollMode">never</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ColorStripe">
        <item name="android:background">#0000FF</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PreferenceSectionHeader">
        <item name="android:background">#EEEEEE</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="HorizontalBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PreferenceCard" parent="ElevatedItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ElevatedItem">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>

</resources>
